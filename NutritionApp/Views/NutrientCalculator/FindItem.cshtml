@model FindItemData

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

<div class="container">
    <div class="row">
        <h1>Food search</h1>
    </div>
    <div class="row">
        <div class="col border border-dark border-1 rounded-3">
            <form method="post" asp-controller="NutrientCalculator" asp-action="FindItem">
                <label class="form-label mt-1">Food Name</label>
                <input class="form-control mb-2" type="text" name="foodName"/>
                <button class="form-control btn btn-dark mb-3" type="submit">Search</button>
            </form>
        </div>
        <div class="col border border-dark border-1 rounded-3">
            <label class="mt-1">
                Selected food:
                @if(Model.selectedIndex!=-1)
                {
                    int index = Model.selectedIndex;
                    <b>@Model.foodList[index].Name</b>
                }
                
            </label>
            <br />
            <label class="mt-1">Macro-nutrient breakdown</label>
            <div class="progress">
                <div class="progress-bar bg-danger" role="progressbar" style="width: 15%"></div>
                <div class="progress-bar bg-success" role="progressbar" style="width: 30%"></div>
                <div class="progress-bar bg-warning" role="progressbar" style="width: 20%"></div>
            </div>
            <div class="row">
                <i class="bi bi-circle-fill" style="color:#dc3545"> <label class="text-black">Protein</label></i>
            </div>
            <div class="row">
                <i class="bi bi-circle-fill" style="color:#198754"> <label class="text-black">Carbohydrates</label></i>
            </div>
            <div class="row">
                <i class="bi bi-circle-fill" style="color:#ffc107"> <label class="text-black">Fat</label></i>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="list-group">
            @for (int i = 0; i < Model.foodList.Count; i++)
            {
                if (i % 2 == 0)
                {
                    <a asp-controller="NutrientCalculator" asp-action="FindItem" asp-route-index=@i class="list-group-item list-group-item-light list-group-item-action">@(Model.foodList[i].Name)</a>
                }
                else
                {
                    <a asp-controller="NutrientCalculator" asp-action="FindItem" asp-route-index=@i class="list-group-item list-group-item-dark list-group-item-action">@(Model.foodList[i].Name)</a>
                }
            }
        </div>
    </div>
</div>





