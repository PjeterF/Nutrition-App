@model List<FoodItem>
@{
    ViewData["Title"] = "FoodItem";
}

<h1>Food Items List</h1>
<a asp-controller="FoodItem" asp-action="AddFoodItem" class="btn btn-primary">Add Food Item</a>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Calories
        </th>
    </tr>
    @for(int i=0;i<Model.Count;i++)
    {
        <tr>
            <th>
                @Model[i].Name
            </th>
            <th>
                @Model[i].Calories
            </th>
            <th>
                <a asp-controller="FoodItem" asp-action="Edit" asp-route-id=@Model[i].Id class="btn btn-dark">Edit</a>
            </th>
            <th>
                <a asp-controller="FoodItem" asp-action="Delete" asp-route-id=@Model[i].Id class="btn btn-danger">Delete</a>
            </th>
        </tr>
    }
</table>

